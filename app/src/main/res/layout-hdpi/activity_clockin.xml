<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clockin"
    android:background="@drawable/wng"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clock in "
        android:textSize="50dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/holo_green_dark"/>

        <ImageView
            android:id="@+id/imgrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/replay_black_24dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

        </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" To clock in:\n 1.Enter the last three digits of your Student ID
        \n 2. Scan your registered finger on scanner"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colordarkash"
        android:layout_marginTop="20dp"
        android:gravity="left"/>

    <EditText
        android:id="@+id/etdigitsin"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint="Enter the last three digits of your Student ID"
        android:background="@drawable/border"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:inputType="number"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colordarkash"/>
    <ImageView
        android:layout_marginTop="210dp"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:hint="Enter the last three digits of your Student ID"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/ic_fingerprint_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thumprint to clock in"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/colorwhite"
        android:layout_marginTop="17dp"
        android:gravity="center"/>

</LinearLayout>